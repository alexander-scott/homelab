---
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: acme
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: acme
    solvers:
      - http01:
          ingress:
            ingressClassName: traefik
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "{{ k8s_namespace }}"
spec:
  secretName: domain-tls
  dnsNames:
    - "{{ hostname }}"
  issuerRef:
    name: acme
    kind: Issuer
